<body class="bg-gray-50">
    <%- include('../../partials/navbar.ejs') %>

    <main class="pt-16">
        
        <!-- Hero Section -->
        <section class="bg-gradient-to-br from-orange-600 via-amber-500 to-yellow-600 py-20 md:py-32 relative overflow-hidden">
            <div class="absolute inset-0 bg-black/20"></div>
