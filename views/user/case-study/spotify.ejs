<%- include('../../partials/head.ejs') %>

<body class="bg-gray-50">
    <%- include('../../partials/navbar.ejs') %>

    <main class="pt-16">
        
        <!-- Hero Section -->
        <section class="bg-gradient-to-br from-green-600 via-emerald-500 to-green-700 py-20 md:py-32 relative overflow-hidden">
            <div class="absolute inset-0 bg-black/30"></div>
            <div class="absolute inset-0">
                <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
                <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
            </div>

            <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <div class="max-w-4xl">
                    <a href="/case-studies" class="inline-flex items-center text-white/80 hover:text-white mb-6 transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                        Back to Case Studies
                    </a>
                    <div class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full mb-6">
                        <span class="text-white text-sm font-medium">Music Streaming Platform</span>
                    </div>
                    <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
                        Spotify: The Sound of Success
                    </h1>
                    <p class="text-xl text-white/90 mb-8">
                        Creating the world's leading music streaming experience with 350M+ users through personalized discovery, seamless playback, and cross-platform excellence.
                    </p>
                    <div class="grid grid-cols-3 gap-6">
                        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4">
                            <div class="text-3xl font-bold text-white">25%</div>
                            <div class="text-white/80 text-sm">More Listening Time</div>
                        </div>
                        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4">
                            <div class="text-3xl font-bold text-white">350M+</div>
                            <div class="text-white/80 text-sm">Active Users</div>
                        </div>
                        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4">
                            <div class="text-3xl font-bold text-white">Zero</div>
                            <div class="text-white/80 text-sm">Interruptions</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Overview -->
        <section class="py-16 bg-white">
            <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
