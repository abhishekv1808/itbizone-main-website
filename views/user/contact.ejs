                                    <!-- <% if (typeof successMessage !=='undefined' ) { %>
                                        <div class="text-green-500 text-sm mt-2">
                                            <%= successMessage %>
                                        </div>
                                        <% } %> -->

                                    <% if(errors.length> 0 ){ %>
                                        <div
                                            class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
                                            <ul class="list-disc list-inside">
                                                <% errors.forEach((error)=>{ %>
                                                    <li>
                                                        <%= error %>
                                                    </li>
                                                    <% }); %>
                                            </ul>
                                        </div>
                                        <% } %>

                                            <form action="/contact" method="POST" class="space-y-4 md:space-y-6">

                                                <!-- Name & Email Row -->
                                                <div class="grid md:grid-cols-2 gap-4 md:gap-6">
                                                    <div>
                                                        <label for="name"
                                                            class="block md:text-sm text-xs font-medium text-gray-700  mb-2">
                                                            Full Name *
                                                        </label>
                                                        <input type="text" id="name" name="fullName"
                                                            value="<%= oldInput ? oldInput.fullName : '' %>" required
                                                            class="w-full px-4 py-3 bg-gray-50  border border-gray-300  rounded-lg text-xs md:text-sm focus:ring-2 focus:ring-gray-500 focus:border-transparent text-gray-900  placeholder-gray-500  transition-colors duration-300"
                                                            placeholder="Enter your full name">

                                                    </div>
                                                    <div>
                                                        <label for="email"
                                                            class="block md:text-sm text-xs font-medium text-gray-700  mb-2">
                                                            Email Address *
                                                        </label>
                                                        <input type="email" id="email" name="email"
                                                            value="<%= oldInput ? oldInput.email : '' %>" required
                                                            class="w-full px-4 py-3 bg-gray-50  border border-gray-300  rounded-lg text-xs md:text-sm focus:ring-2 focus:ring-gray-500 focus:border-transparent text-gray-900  placeholder-gray-500  transition-colors duration-300"
                                                            placeholder="Enter your email address">

                                                    </div>
                                                </div>

                                                <!-- Phone & Company Row -->
                                                <div class="grid md:grid-cols-2 gap-4 md:gap-6">
                                                    <div>
                                                        <label for="phone"
                                                            class="block md:text-sm text-xs font-medium text-gray-700  mb-2">
                                                            Phone Number (Optional)
                                                        </label>
                                                        <input type="tel" id="phone" name="mobileNumber"
                                                            value="<%= oldInput ? oldInput.mobileNumber : '' %>"
                                                            class="w-full px-4 py-3 bg-gray-50  border border-gray-300  rounded-lg text-xs md:text-sm focus:ring-2 focus:ring-gray-500 focus:border-transparent text-gray-900  placeholder-gray-500  transition-colors duration-300"
                                                            placeholder="Enter your 10-digit mobile number">

                                                    </div>
                                                    <div>
                                                        <label for="company"
                                                            class="block md:text-sm text-xs font-medium text-gray-700  mb-2">
                                                            Company Name (Optional)
                                                        </label>
                                                        <input type="text" id="company" name="company"
                                                            value="<%= oldInput ? oldInput.company : '' %>"
                                                            class="w-full px-4 py-3 bg-gray-50  border border-gray-300  rounded-lg text-xs md:text-sm focus:ring-2 focus:ring-gray-500 focus:border-transparent text-gray-900  placeholder-gray-500  transition-colors duration-300"
                                                            placeholder="Enter your company name">

                                                    </div>
                                                </div>

                                                <!-- Service Interest -->
                                                <div>
                                                    <label for="service"
                                                        class="block md:text-sm text-xs font-medium text-gray-700  mb-2">
                                                        Service Interest (Optional)
                                                    </label>
                                                    <select id="service" name="service"
                                                        class="w-full px-4 py-3 bg-gray-50  border border-gray-300  rounded-lg text-xs md:text-sm focus:ring-2 focus:ring-gray-500 focus:border-transparent text-gray-900  transition-colors duration-300">
                                                        <option value="">Select a service</option>
                                                        <option value="Website-Development" <%=oldInput &&
                                                            oldInput.service==='Website-Development' ? 'selected' : ''
                                                            %>>Website Development
                                                        </option>
                                                        <option value="Digital-Marketing" <%=oldInput &&
                                                            oldInput.service==='Digital-Marketing' ? 'selected' : '' %>
                                                            >Digital Marketing
                                                        </option>
                                                        <option value="Graphic-Design" <%=oldInput &&
                                                            oldInput.service==='Graphic-Design' ? 'selected' : '' %>
                                                            >Graphic Design</option>
                                                        <option value="IT-Consulting" <%=oldInput &&
                                                            oldInput.service==='IT-Consulting' ? 'selected' : '' %>>IT
                                                            Consulting</option>
                                                        <option value="Other" <%=oldInput && oldInput.service==='Other'
                                                            ? 'selected' : '' %>
                                                            >Other</option>
                                                    </select>

                                                </div>


                                                <!-- Message -->
                                                <div>
                                                    <label for="message"
                                                        class="block md:text-sm text-xs font-medium text-gray-700  mb-2">
                                                        Project Details *
                                                    </label>
                                                    <textarea id="message" name="description" rows="6" required
                                                        class="w-full px-4 py-3 bg-gray-50  border border-gray-300  rounded-lg text-xs md:text-sm focus:ring-2 focus:ring-gray-500 focus:border-transparent text-gray-900  placeholder-gray-500  transition-colors duration-300 resize-vertical"
                                                        placeholder="Tell us about your project, goals, timeline, and any specific requirements..."><%= oldInput ? oldInput.description : '' %></textarea>

                                                </div>

                                                <!-- Timeline -->
                                                <div>
                                                    <label for="timeline"
                                                        class="block md:text-sm text-xs font-medium text-gray-700  mb-2">
                                                        Project Timeline (Optional)
                                                    </label>
                                                    <select id="timeline" name="timeline"
                                                        class="w-full px-4 py-3 bg-gray-50  border border-gray-300  rounded-lg text-xs md:text-sm focus:ring-2 focus:ring-gray-500 focus:border-transparent text-gray-900  transition-colors duration-300">
                                                        <option value="" <%=oldInput ? oldInput.timeline : '' %>
                                                            >Select timeline</option>
                                                        <option value="asap" <%=oldInput && oldInput.timeline==='asap'
                                                            ? 'selected' : '' %>>ASAP
                                                        </option>
                                                        <option value="1-month" <%=oldInput &&
                                                            oldInput.timeline==='1-month' ? 'selected' : '' %>
                                                            >Within 1 month</option>
                                                        <option value="2-3-months" <%=oldInput &&
